<Theme>
    <Router AppAssembly="@typeof(bReader.Shared.MainLayout).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(bReader.Shared.MainLayout)" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(bReader.Shared.MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
    <LayerHost />
</Theme>